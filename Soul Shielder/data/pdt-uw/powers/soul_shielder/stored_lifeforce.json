{
	"type": "apoli:multiple",
	"delay": {
		"type": "apoli:resource",
		"min": 0,
		"max": 10,
		"max_action": {
			"type": "apoli:and",
			"actions": [
				{
					"type": "apoli:heal",
					"amount": 2.0
				},
				{
					"type": "apoli:execute_command",
					"command": "scoreboard players remove @s pdt-uw.soul_fragments 1"
				},
				{
					"type": "apoli:set_resource",
					"resource": "*:*_delay",
					"value": 0
				}
			]
		},
		"start_value": 0,
		"hud_render": {
			"should_render": false
		}
	},
	"ticker": {
		"type": "apoli:action_over_time",
		"interval": 1,
		"condition": {
			"type": "apoli:and",
			"conditions": [
				{
					"type": "apoli:command",
					"command": "scoreboard players get @s pdt-uw.soul_fragments",
					"comparison": ">",
					"compare_to": 20
				},
				{
					"type": "apoli:relative_health",
					"comparison": "<",
					"compare_to": 0.75
				}
			]
		},
		"entity_action": {
			"type": "apoli:change_resource",
			"resource": "*:*_delay",
			"change": 1
		},
		"falling_action": {
			"type": "apoli:set_resource",
			"resource": "*:*_delay",
			"value": 0
		}
	}
}