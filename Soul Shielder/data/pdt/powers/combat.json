{
	"hidden": true,
	"type": "apoli:multiple",
	"timer": {
		"type": "apoli:resource",
		"min": 0,
		"max": 100,
		"start_value": 0,
		"hud_render": {
			"should_render": false
		}
	},
	"ticker": {
		"type": "apoli:action_over_time",
		"interval": 2,
		"entity_action": {
			"type": "apoli:change_resource",
			"resource": "*:*_timer",
			"change": -1
		}
	},
	"reset": {
		"type": "apoli:modify_damage_taken",
		"modifier": {
			"operation": "add_base_early",
			"value": 0.0
		},
		"self_action": {
			"type": "apoli:set_resource",
			"resource": "*:*_timer",
			"value": 100
		}
	}
}